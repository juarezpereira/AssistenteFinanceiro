<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_16">

        <TextView
            android:id="@+id/labelInv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Investimento"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labelDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelInv"
            android:text="Despesa"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labelRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelDes"
            android:text="Receita"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvInvestimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/labelInv"
            android:text="00,00"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDespesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/labelDes"
            android:text="00,00"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/labelRes"
            android:text="00,00"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>